<%- include('includes/header.ejs') %>
<body>
<%- include('includes/nav.ejs') %>

	<main class="y-2">
		<div class="container">
			<h1 class="mb">My products</h1>
			<% if(products.length == 0){ %>
			<p class="text-center"> Currently no Products</p>
			<%} else{ %>
			<p class="mb">list of all the products...</p>
			<div class="grid">
				<% for(let prod of products){ %>
				<div>
					<div class="header">
						<h1 class="text-center mb"><%= prod.title %></h1>
					</div>
					<img class="d-block mb" src="https://picsum.photos/id/0/300/200">
					<div class="content mb">
						<h2>$19.99</h2>
						<p>A very interesting laptop</p>
					</div>
					<button class="button"> Add to cart</button>
				</div>
				<% } %>
			</div>
			<% } %>
		</div>
	</main>

<%- include('includes/footer.ejs') %>
